MAX_FILE_SIZE_MB=50
UPLOAD_DIR=data/uploads
LOG_LEVEL=INFO
LOG_DIR=logs

# === RAG SETTINGS ===

# OpenAI API Key (Required for RAG functionality)
OPENAI_API_KEY=sk-...your-key-here

# Document Chunking (Optional - defaults provided)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector Database (Optional - defaults provided)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=financial_docs

# LLM Models (Optional - defaults provided)
EMBEDDING_MODEL=text-embedding-3-small
PRIMARY_LLM=gpt-4-turbo-preview
FALLBACK_LLM=gpt-3.5-turbo
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2000

# Query Processing (Optional - defaults provided)
TOP_K_CHUNKS=5
MIN_RELEVANCE_SCORE=0.7

# === AGENT SETTINGS (Phase 2) ===

# Agent Feature Flags (Optional - defaults provided)
USE_AGENTS=false  # Enable multi-agent query decomposition

# Agent Models (Optional - defaults provided)
AGENT_ROUTER_MODEL=gpt-3.5-turbo
AGENT_DECOMPOSER_MODEL=gpt-4-turbo-preview
AGENT_SYNTHESIZER_MODEL=gpt-4-turbo-preview

# Agent Configuration (Optional - defaults provided)
MAX_SUB_QUERIES=5
AGENT_TIMEOUT_SECONDS=30
ENABLE_REASONING_DISPLAY=true
